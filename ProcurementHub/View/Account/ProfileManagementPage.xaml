<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProcurementHub.View.Account.ProfileManagementPage"
             xmlns:accountViewModels="clr-namespace:ProcurementHub.ViewModel.AccountViewModels"
             x:DataType="accountViewModels:ProfileManagementViewModel">
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsEnabled="False" IsVisible="False" />
    </Shell.BackButtonBehavior>
    <Grid Margin="20, 0, 20, 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Grid.Row="1" Text="{Binding Model.ProfileWelcomeText}" HorizontalOptions="Center" FontSize="Title" FontAttributes="Bold"/>
        <StackLayout Grid.Row="3" Orientation="Vertical" HorizontalOptions="CenterAndExpand">
            <Button Grid.Row="4" Text="Log out" BorderColor="#58D68B"  BackgroundColor="Transparent" TextColor="#58D68B" FontAttributes="Bold" CornerRadius="10"
                    WidthRequest="200" Margin="0,15,0,0" Command="{Binding SignOutCommand}"/>

        </StackLayout>

        <Grid Grid.Row="6"
            ColumnDefinitions="*,*,*"
            ColumnSpacing="5"
            RowDefinitions="*,Auto"
            RowSpacing="0">

            <Button Text="Create new team" Grid.Row="1" Grid.Column="0" FontAttributes="Bold"
                BorderColor="#58D68B" BackgroundColor="Transparent" TextColor="#58D68B"  Command="{Binding GoToCreateNewTeamCommand}" />
            <Button Text="Join team" Grid.Row="1" Grid.Column="1" FontAttributes="Bold"
                BorderColor="#58D68B" BackgroundColor="Transparent" TextColor="#58D68B" Command="{Binding GoToJoinTeamCommand}" />
            <Button Text="Dashboard" Grid.Row="1" Grid.Column="2" FontAttributes="Bold"
                BorderColor="#58D68B" BackgroundColor="Transparent" TextColor="#58D68B" Command="{Binding GoToDashboardCommand}" />
            

        </Grid>
    </Grid>
    
</ContentPage>