<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ProcurementHub.View.Teams.TeamSettingsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodel="clr-namespace:ProcurementHub.ViewModel.TeamsViewModels"
    Title="TeamSettingsPage"
    x:DataType="viewmodel:TeamSettingsViewModel">
    <Shell.NavBarIsVisible>False</Shell.NavBarIsVisible>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackLayout Grid.Row="1">
            <Label
                FontAttributes="Bold"
                FontFamily="Arial"
                FontSize="48"
                HorizontalOptions="Center"
                Text="{Binding Model.Description}"
                VerticalOptions="Center" />
            <Label
                FontAttributes="Bold"
                FontFamily="Arial"
                FontSize="24"
                HorizontalOptions="Center"
                Text="{Binding Model.Status}"
                VerticalOptions="Center" />
            <Label
                FontAttributes="Bold"
                FontFamily="Arial"
                FontSize="24"
                HorizontalOptions="Center"
                Text="{Binding Model.TeamJoinCode}"
                VerticalOptions="Center" />
            <Label
                FontAttributes="Bold"
                FontFamily="Arial"
                FontSize="24"
                HorizontalOptions="Center"
                Text="{Binding Model.TeamJoinPassword}"
                VerticalOptions="Center" />

        </StackLayout>
    </Grid>
</ContentPage>